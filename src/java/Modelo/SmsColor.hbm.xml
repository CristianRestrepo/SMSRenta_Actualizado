<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="Modelo.SmsColor" table="sms_color" catalog="smsrenta_actualizada" optimistic-lock="version">
        <id name="idColor" type="java.lang.Integer">
            <column name="idColor" />
            <generator class="identity" />
        </id>
        <property name="colorNombre" type="string">
            <column name="Color_nombre" length="45" not-null="true" />
        </property>
        <set name="smsVehiculos" table="sms_vehiculo" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="idColor" not-null="true" />
            </key>
            <one-to-many class="Modelo.SmsVehiculo" />
        </set>
</class>

</hibernate-mapping>
